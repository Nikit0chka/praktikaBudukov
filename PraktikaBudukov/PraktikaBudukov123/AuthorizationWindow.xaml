<Window x:Class="Praktik1.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktik1"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="500">
    <Grid>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Margin="50,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="16" FontFamily="MS Reference Sans Serif" TextChanged="loginTextBox_TextChanged"/>
        <PasswordBox x:Name="passwordPasBox" HorizontalAlignment="Left" Margin="50,300,0,0" VerticalAlignment="Top" Width="120" PasswordChanged="passwordPasBox_PasswordChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,230,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,280,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <Button x:Name="authorizationButton" Content="Authorization" HorizontalAlignment="Center" Margin="0,374,0,0" VerticalAlignment="Top" FontFamily="MS Reference Sans Serif" Click="Button_Click"/>
        <Image Source="Resourses\Images\logo.png" Margin="152,10,152,236"/>
    </Grid>
</Window>
